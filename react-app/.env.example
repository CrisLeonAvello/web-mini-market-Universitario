# ============================================
# STUDIMARET - CONFIGURACIÓN DE ENTORNO
# ============================================

# Puerto del servidor de desarrollo
VITE_PORT=5173

# URL base de la API
VITE_API_BASE_URL=https://fakestoreapi.com

# Configuración de la aplicación
VITE_APP_NAME=StudiMarket
VITE_APP_VERSION=1.0.0

# Configuración de desarrollo
VITE_DEV_MODE=true
VITE_ENABLE_CONSOLE_LOGS=true

# Configuración de cache
VITE_CACHE_PRODUCTS=true
VITE_CACHE_DURATION=300000

# Configuración de límites
VITE_MAX_CART_ITEMS=50
VITE_MAX_WISHLIST_ITEMS=100

# URLs de la API (FakeStore API)
VITE_PRODUCTS_ENDPOINT=/products
VITE_CATEGORIES_ENDPOINT=/products/categories

# Configuración de imágenes
VITE_DEFAULT_IMAGE_URL=/placeholder-image.jpg
VITE_IMAGE_PLACEHOLDER=https://via.placeholder.com/300x300?text=Imagen+No+Disponible

# Configuración de notificaciones
VITE_NOTIFICATION_DURATION=2000

# Configuración de moneda
VITE_CURRENCY_SYMBOL=$
VITE_CURRENCY_CODE=USD

# Configuración de productos
VITE_PRODUCTS_PER_PAGE=20
VITE_DEFAULT_STOCK_MIN=5
VITE_DEFAULT_STOCK_MAX=25

# Configuración de descuentos
VITE_SALE_PROBABILITY=0.3
VITE_MIN_DISCOUNT=10
VITE_MAX_DISCOUNT=40